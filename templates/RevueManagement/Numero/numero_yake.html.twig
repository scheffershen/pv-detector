{% extends 'admin_base.html.twig' %}

{% block title %}
    {{ numero.title }}
{% endblock %}

{% block body %}
    <div class="content-page">
        <div class="content">
            <!-- Start Content -->
            <div class="container-fluid">
                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <h4 class="page-title">
                                {{ 'numeros'|trans }}: {{ numero.revue.title }}, {{
                                    numero.title
                                }}, {{ numero.receiptDate|date('d-M-Y') }}
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                {{ 'numero.keywords'|trans }}
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered table-striped"
                                    id="tablefiltre">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>
                                                {{ 'keyword'|trans }}
                                            </th>
                                            <th>
                                                {{ 'weight'|trans }}
                                            </th>
                                        </tr>
                                    </thead>
                                    <thead id="filtreForm">
                                        <tr>
                                            <th>
                                                {{ 'keyword'|trans }}
                                            </th>
                                            <th>
                                                {{ 'weight'|trans }}
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for keyword in keywords %}
                                            <tr>
                                                <td>
                                                    {{ keyword.ngram }}
                                                </td>
                                                <td>
                                                    {{
                                                        keyword.score|number_format(
                                                            6
                                                        )
                                                    }}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/datatables') }}
{% endblock %}
