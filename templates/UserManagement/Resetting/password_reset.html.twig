{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.reset_password'|trans }}
{% endblock %}

{% block body %}
    <div class="account-pages w-100 mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-header">
                            {{ 'title.reset_password'|trans }}
                        </div>
                        <div class="card-body">
                            {{ include('partials/_flash_messages.html.twig') }}

                            {{ form_start(form) }}
                            {{ form_widget(form) }}

                            <div class="form-group mb-0">
                                <button type="submit"
                                    class="btn waves-effect waves-light btn-dark">
                                    {{ 'action.send_reset_link'|trans }}
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end container -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/password-reset') }}                 
{% endblock %}