{% for type, messages in app.flashes %}
    {% for message in messages %}
        {% if type == 'error' %}
            <div class="alert alert-dismissible alert-danger mt-2" role="alert">
                <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                {{ message|trans }}
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}

