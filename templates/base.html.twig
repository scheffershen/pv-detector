<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>
            {% block title %}
                Welcome!
            {% endblock %}
        </title>
        <meta name="description" content="" />

        <!-- Disable tap highlight on IE -->
        <meta name="msapplication-tap-highlight" content="no" />

        <!-- Web Application Manifest -->
        <link rel="manifest" href="{{ asset('manifest.json') }}" />

        <!-- Add to homescreen for Chrome on Android -->
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="application-name" content="VEILLE" />
        <link rel="icon"
            sizes="192x153"
            href="{{ asset('images/icons/chrome-touch-icon-192x192.png') }}" />

        <!-- Add to homescreen for Safari on iOS -->
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="apple-mobile-web-app-title" content="VEILLE" />
        <link rel="apple-touch-icon"
            href="{{ asset('images/icons/apple-touch-icon.png') }}" />

        <!-- Tile icon for Win8 (144x144 + tile color) -->
        <meta name="msapplication-TileImage"
            content="{{ asset('images/icons/icon-144x144.png') }}" />
        <meta name="msapplication-TileColor" content="#0069d9" />

        <!-- Color the status bar on mobile devices -->
        <meta name="theme-color" content="#ffffff" />
        {{ encore_entry_link_tags('css/app') }}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body class="authentication-bg authentication-bg-pattern d-flex align-items-center">
        {% block body %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
